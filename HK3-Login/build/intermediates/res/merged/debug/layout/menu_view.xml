<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/image_view_dish" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dish Name"
        android:id="@+id/text_view_dish_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dish Description"
        android:id="@+id/text_view_dish_description" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dish Price"
            android:id="@+id/text_view_dish_price"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining Number"
            android:id="@+id/text_view_remaining_number"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/text_view_dish_price"
            android:layout_marginLeft="40dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_add_dish"
            android:layout_alignBaseline="@id/text_view_dish_price"
            android:layout_alignParentRight="true"
            android:text="ADD"/>

    </RelativeLayout>

</LinearLayout>
