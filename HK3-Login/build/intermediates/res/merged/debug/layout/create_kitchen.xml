<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp16"
    android:paddingRight="@dimen/dp16">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp4">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp4"
                    android:text="@string/kitchenName" />

                <EditText

                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/kName"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="center_vertical"

                    android:inputType="text" />

            </TableRow>

            <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp48"
                android:paddingRight="@dimen/dp4"
                android:textSize="@dimen/text_medium"
                android:gravity="center_vertical|right"
                android:layout_marginRight="@dimen/dp4"
                android:text="@string/phone" />


            <EditText

                android:layout_width="@dimen/dp144"
                android:layout_height="@dimen/dp48"
                android:id="@+id/phone"
                android:textSize="@dimen/text_medium"
                android:layout_marginLeft="@dimen/dp4"
                android:gravity="center_vertical"

                android:inputType="number" />

        </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp4"
                    android:text="@string/city" />


                <EditText

                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/city"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="center_vertical"

                    android:inputType="text" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp4"
                    android:text="@string/street" />


                <EditText

                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/street"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="center_vertical"

                    android:inputType="text" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp4"
                    android:text="@string/zipcode" />


                <EditText

                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/zipcode"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="center_vertical"

                    android:inputType="text" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp4"
                    android:text="@string/category" />

                <Spinner

                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/category"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="center_vertical"

                    android:entries="@array/category" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp4"
                    android:text="@string/imageUpload" />

                <Button
                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/imageUpload"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:height="@dimen/dp40"
                    android:text="@string/uploadButton" />


            </TableRow>





        </TableLayout>

        <Button
            android:layout_width="@dimen/dp144"
            android:layout_height="@dimen/dp48"
            android:id="@+id/createKitchen"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp4"
            android:textSize="@dimen/text_medium"
            android:height="@dimen/dp40"
            android:text="@string/createKitchen" />
    </LinearLayout>
</ScrollView>